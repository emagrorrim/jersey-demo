<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zp.personal.shopping.mapper.ItemMapper">
    <select id="getAllItems" resultType="zp.personal.shopping.bean.Item">
        SELECT * FROM ITEMS
    </select>

    <select id="getItemById" resultType="zp.personal.shopping.bean.Item">
        SELECT * FROM ITEMS WHERE id = #{id}
    </select>

    <insert id="insertItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ITEMS(name) VALUES(#{name})
    </insert>

    <delete id="deleteItemById" parameterType="int">
        DELETE FROM ITEMS WHERE id = #{id}
    </delete>

    <update id="updateItem" parameterType="zp.personal.shopping.bean.Item">
      UPDATE ITEMS SET name = #{name} WHERE id = #{id}
    </update>
</mapper>
